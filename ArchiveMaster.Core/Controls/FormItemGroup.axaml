<WrapPanel
    x:Class="ArchiveMaster.Controls.FormItemGroup"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:FzLib.Avalonia.Controls;assembly=FzLib.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <WrapPanel.Styles>
        <Style Selector="ctrl|FormItem">
            <Setter Property="LabelWidth" Value="{Binding #root.LabelWidth}" />
            <Setter Property="Margin" Value="0,0,16,8" />
        </Style>
    </WrapPanel.Styles>

</WrapPanel>
