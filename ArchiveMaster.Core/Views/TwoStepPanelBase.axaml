<local:PanelBase
    x:Class="ArchiveMaster.Views.TwoStepPanelBase"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ArchiveMaster.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <local:PanelBase.PanelContent>
        <Grid
            Margin="8"
            RowDefinitions="Auto,8,Auto,8,*,8,Auto">

            <ContentControl
                Content="{Binding #root.ConfigsContent}"
                IsEnabled="{Binding CanInitialize}" />
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Classes="Long"
                    Command="{Binding InitializeCommand}"
                    Content="初始化" />
                <Button
                    Classes="Long"
                    Command="{Binding ResetCommand}"
                    Content="重置" />
            </StackPanel>
            <ContentControl
                Grid.Row="4"
                Content="{Binding ElementName=root, Path=ResultsContent}" />
            <Grid
                Grid.Row="6"
                ColumnDefinitions="*,8,*,16,Auto,8,Auto"
                IsEnabled="{Binding Config, Converter={StaticResource NotNullConverter}}">


                <TextBlock
                    Text="{Binding Message}"
                    TextTrimming="CharacterEllipsis" />

                <ProgressBar
                    Grid.Column="2"
                    IsIndeterminate="{Binding ProgressIndeterminate}"
                    Maximum="1"
                    Minimum="0"
                    Value="{Binding Progress}" />

                <Button
                    Grid.Column="4"
                    Classes="Long"
                    Command="{Binding ExecuteCommand}"
                    Content="执行" />
                <Button
                    Grid.Column="6"
                    Classes="Long"
                    Command="{Binding CancelExecuteCommand}"
                    Content="取消"
                    IsEnabled="{Binding ExecuteCommand.CanBeCanceled}" />
            </Grid>

        </Grid>
    </local:PanelBase.PanelContent>
</local:PanelBase>
