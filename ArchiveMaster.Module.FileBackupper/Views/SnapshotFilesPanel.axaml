<UserControl
    x:Class="ArchiveMaster.Views.SnapshotFilesPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:ArchiveMaster.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,8,*">
        <Grid ColumnDefinitions="*,8,Auto">
            <TextBox x:Name="txtFileSearch" />
            <Button
                Grid.Column="2"
                Classes="Icon"
                Command="{Binding #dg.Search}"
                Content="{StaticResource Search}" />
        </Grid>
        <v:TreeFileDataGrid
            x:Name="dg"
            Grid.Row="2"
            ColumnIsCheckedIndex="-1"
            ColumnStatusIndex="-1"
            ItemsSource="{Binding TreeFiles}"
            RootDepth="0"
            SearchText="{Binding #txtFileSearch.Text}"
            SelectedItem="{Binding SelectedFile}">
            <v:TreeFileDataGrid.Columns>
                <DataGridTemplateColumn
                    CanUserResize="False"
                    Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <DropDownButton
                                    Classes="Link"
                                    Content="操作">
                                    <DropDownButton.Flyout>
                                        <MenuFlyout>
                                            <MenuItem
                                                Command="{Binding $parent[TabItem].DataContext.SaveAsCommand}"
                                                CommandParameter="{Binding .}"
                                                Header="另存为" />
                                            <!--  <MenuItem  -->
                                            <!--  Command="{Binding $parent[TabItem].DataContext.LoadFileHistoryCommand}"  -->
                                            <!--  CommandParameter="{Binding .}"  -->
                                            <!--  Header="查看历史记录"  -->
                                            <!--  IsVisible="{Binding !IsDir}" />  -->
                                        </MenuFlyout>
                                    </DropDownButton.Flyout>
                                </DropDownButton>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </v:TreeFileDataGrid.Columns>
        </v:TreeFileDataGrid>
    </Grid>
</UserControl>