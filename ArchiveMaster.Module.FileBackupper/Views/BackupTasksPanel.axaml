<v:PanelBase
    x:Class="ArchiveMaster.Views.BackupTasksPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:ArchiveMaster.Configs"
    xmlns:ctrl="clr-namespace:FzLib.Avalonia.Controls;assembly=FzLib.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:g="clr-namespace:GroupBox.Avalonia.Controls;assembly=GroupBox.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:v="using:ArchiveMaster.Views"
    xmlns:vm="using:ArchiveMaster.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:BackupTasksViewModel"
    mc:Ignorable="d">
    <v:PanelBase.PanelContent>
        <Grid
            ColumnDefinitions="*,16,*"
            RowDefinitions="Auto,8,*">
            <g:GroupBox
                Grid.ColumnSpan="3"
                Header="总开关">
                <ToggleSwitch
                    IsChecked="{Binding Config.EnableBackgroundBackup}"
                    OffContent="禁止后台自动备份"
                    OnContent="开启后台自动备份" />
            </g:GroupBox>
            <Grid
                Grid.Row="2"
                RowDefinitions="*,8,Auto">
                <v:BackupTaskDataGrid
                    ItemsSource="{Binding Tasks}"
                    SelectedItem="{Binding SelectedTask}" />

                <StackPanel
                    Grid.Row="2"
                    Margin="0,0,8,0"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Classes="Icon"
                        Command="{Binding AddTaskCommand}"
                        Content="{StaticResource Add}"
                        FontFamily="{StaticResource IconFont}"
                        ToolTip.Tip="新增" />
                    <Button
                        Classes="Icon"
                        Command="{Binding DeleteSelectedTaskCommand}"
                        Content="{StaticResource Delete}"
                        FontFamily="{StaticResource IconFont}"
                        IsEnabled="{Binding SelectedTask, Converter={StaticResource NotNullConverter}}"
                        ToolTip.Tip="删除" />
                </StackPanel>

            </Grid>


            <ctrl:StackFormItemGroup
                Grid.Row="2"
                Grid.Column="2"
                IsEnabled="{Binding SelectedTask, Converter={StaticResource NotNullConverter}}">
                <TextBlock
                    FontWeight="Bold"
                    Text="基本信息" />
                <ctrl:FormItem Label="任务名：">
                    <TextBox Text="{Binding SelectedTask.Name}" />
                </ctrl:FormItem>
                <ctrl:FormItem Label="需要备份的目录：">
                    <ctrl:FilePickerTextBox
                        FileNames="{Binding SelectedTask.SourceDir}"
                        Type="OpenFolder" />
                </ctrl:FormItem>

                <ctrl:FormItem Label="备份文件存放目录：">
                    <ctrl:FilePickerTextBox
                        FileNames="{Binding SelectedTask.BackupDir}"
                        Type="OpenFolder" />
                </ctrl:FormItem>

                <ctrl:FormItem Label="黑名单：">
                    <v:BlackListTextBox
                        Text="{Binding SelectedTask.BlackList}"
                        UseRegex="{Binding SelectedTask.BlackListUseRegex}" />
                </ctrl:FormItem>


                <TextBlock
                    Margin="0,8,0,0"
                    FontWeight="Bold"
                    Text="备份方式" />
                <ctrl:FormItem Label="定时备份：">
                    <Grid ColumnDefinitions="Auto,8,*">
                        <CheckBox IsChecked="{Binding SelectedTask.ByTimeInterval}" />
                        <TextBox
                            Grid.Column="2"
                            IsEnabled="{Binding SelectedTask.ByTimeInterval}"
                            Text="{Binding SelectedTask.TimeInterval}" />
                    </Grid>
                </ctrl:FormItem>
                <ctrl:FormItem Label="实时备份：">
                    <CheckBox
                        Content="监测文件和目录的改动"
                        IsChecked="{Binding SelectedTask.ByWatching}" />
                </ctrl:FormItem>

            </ctrl:StackFormItemGroup>
        </Grid>
    </v:PanelBase.PanelContent>
</v:PanelBase>